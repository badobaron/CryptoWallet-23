<Page x:Class="Wallet.Presentation.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wallet.Presentation.View.Pages"  
      xmlns:viewModel="clr-namespace:Wallet.Presentation.ViewModel"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:Wallet.Presentation.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Page.Resources>
        <converters:AccountConverter x:Key="AccountConverter" />
    </Page.Resources>

    <Grid>
        <TextBlock HorizontalAlignment="Left" FontSize="30" Margin="363,50,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top"/>

        <TextBox HorizontalAlignment="Left" Name="AccountName" Text="{Binding Account.AccountName}" materialDesign:HintAssist.Hint="Account name" VerticalAlignment="Center" Height="23" Margin="340,-100,0,0" TextWrapping="Wrap" Width="120"/>
        <PasswordBox PasswordChanged="PasswordChanged" HorizontalAlignment="Left" Name="Password" Style="{StaticResource MaterialDesignPasswordBox}" materialDesign:HintAssist.Hint="Password" VerticalAlignment="Center" Height="23" Margin="340,-20,0,0"  Width="120"/>

        <Button Content="Back" Click="BackToMainWindow" Background="{StaticResource MaterialDesignBodyLight}" HorizontalAlignment="Left" Margin="300,306,0,0" VerticalAlignment="Top" Width="76"/>
        <Button Name="LoginBtn" Content="Create" Command="{Binding LoginCommand}" HorizontalAlignment="Left" Margin="424,306,0,0" VerticalAlignment="Top" Width="76">
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource AccountConverter}">
                    <Binding ElementName="AccountName" Path="Text" />
                    <Binding ElementName="Password" Path="."/>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>

        <Grid.Background>
            <ImageBrush ImageSource="../../Resources/bgr.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
    </Grid>
</Page>

