<Page x:Class="Wallet.Presentation.View.Pages.CreateAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wallet.Presentation.View.Pages"    
      xmlns:viewModel="clr-namespace:Wallet.Presentation.ViewModel"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:Wallet.Presentation.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateAccountPage">
    <Page.Resources>
        <converters:NewAccountConverter x:Key="NewAccountConverter" />
    </Page.Resources>
    <Grid>
        <TextBlock Margin="0,50,0,0" FontSize="35" TextWrapping="Wrap" Text="Create account" HorizontalAlignment="Center"/>

        <TextBox HorizontalAlignment="Center" Name="AccountName" Text="{Binding NewAccount.AccountName}" materialDesign:HintAssist.Hint="Account name" VerticalAlignment="Center" Height="33" Margin="0,-90,0,0" TextWrapping="Wrap" Width="200" FontSize="17"/>
        <PasswordBox PasswordChanged="PasswordChanged" HorizontalAlignment="Center" Name="Password" Style="{StaticResource MaterialDesignPasswordBox}" materialDesign:HintAssist.Hint="Password" VerticalAlignment="Center" Height="33" Margin="0,-0,0,0" Width="200" FontSize="17"/>
        <PasswordBox PasswordChanged="PasswordChanged" HorizontalAlignment="Center" Name="RepeatPasssword" Style="{StaticResource MaterialDesignPasswordBox}" materialDesign:HintAssist.Hint="Repeat Password" VerticalAlignment="Center" Height="33" Margin="0,90,0,0"  Width="200" FontSize="17"/>

        <Button Content="Back" Click="BackToMainWindow" Background="{StaticResource MaterialDesignBodyLight}" HorizontalAlignment="Center" Margin="300,310,424,0" VerticalAlignment="Top" Width="76"/>
        <Button Name="CreateAccountBtn" Content="Create" Command="{Binding CreateAccountCommand}" HorizontalAlignment="Center" Margin="424,310,300,0" VerticalAlignment="Top" Width="76">
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource NewAccountConverter}">
                    <Binding ElementName="AccountName" Path="Text" />
                    <Binding ElementName="Password" Path="."/>
                    <Binding ElementName="RepeatPasssword" Path="."/>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>

        <Grid.Background>
            <ImageBrush ImageSource="../../Resources/bgr.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
    </Grid>
</Page>
