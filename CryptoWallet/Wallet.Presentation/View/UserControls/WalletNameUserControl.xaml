<UserControl x:Class="Wallet.Presentation.View.UserControls.WalletNameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wallet.Presentation.View.UserControls"     
             xmlns:viewModel="clr-namespace:Wallet.Presentation.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,0,644,318">
        <TextBlock Width="100" Height="30" Name="AccountName"  FontSize="20" HorizontalAlignment="Center" Margin="0,-45,0,0" TextWrapping="Wrap" Text="{Binding WalletModel.WalletName}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
