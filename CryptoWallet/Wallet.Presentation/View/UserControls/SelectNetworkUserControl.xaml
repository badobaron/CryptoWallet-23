<UserControl x:Class="Wallet.Presentation.View.UserControls.SelectNetworkUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wallet.Presentation.View.UserControls" 
             xmlns:viewModel="clr-namespace:Wallet.Presentation.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="606,0,0,366">
        <local:WalletNameUserControl>
        </local:WalletNameUserControl>
        <RadioButton IsChecked="{Binding WalletModel.Mainnet}" Content="Mainnet" HorizontalAlignment="Left" Margin="24,20,0,0" VerticalAlignment="Top"/>
        <RadioButton IsChecked="{Binding  WalletModel.Testnet}" Content="Testnet" HorizontalAlignment="Left" Margin="111,21,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,52,0,0" TextWrapping="NoWrap" Text="{Binding  WalletModel.Testnet}" VerticalAlignment="Top" Width="151" Height="23"/>
    </Grid>
</UserControl>

