<UserControl x:Class="Wallet.Presentation.View.UserControls.SelectNetworkUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wallet.Presentation.View.UserControls"  

             xmlns:viewModel="clr-namespace:Wallet.Presentation.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid Margin="606,0,0,366">
        <local:WalletNameUserControl/>
        <RadioButton  IsChecked="{Binding Path=WalletModel.Mainnet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Content="Mainnet" HorizontalAlignment="Left" Margin="24,20,0,0" VerticalAlignment="Top"/>
        <RadioButton  IsChecked="{Binding Path=WalletModel.Testnet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="Testnet" HorizontalAlignment="Left" Margin="111,21,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>

